$germany04_location_text = "München 1990-1991";
$germany04_animation_text = "Jön az Oktoberfest!\nMünchennek fel kell készülnie a nagy sörfesztiválra, ami több ezer turistát és helyit fog vonzani, hogy összezsúfolódjanak a város utcáin.\nA tömegközlekedési rendszernek nagy tömeg ellátására kell képesnek lennie és te vagy az, akit megbíztak a mûvelet felügyeletével.";
$germany04_briefing_short = "Jön az Oktoberfest!\nMünchennek fel kell készülnie a nagy sörfesztiválra, ami több ezer turistát és helyit fog vonzani, hogy összezsúfolódjanak a város utcáin.\nA tömegközlekedési rendszernek nagy tömeg ellátására kell képesnek lennie és te vagy az, akit megbíztak a mûvelet felügyeletével.";
$germany04_briefing_text = "Az Oktoberfest hamarosan itt van! A müncheni Oktoberfest az egyik legnagyobb fesztivál az országban és biztos hogy rengeteg látogatót fog vonzani a városba. És ez, barátom, az amiért az ön segítségét kérem!";
$germany04_completed_text = "Szép munka! Az Oktoberfestnek végre vége! Több látogató volt, mint amire számítottam, de minden jól alakult. Köszönöm, hogy segített nekem, jó volt önnel dolgozni!";

$germany04_task01_name = "Felkészülés az áradatra";
$germany04_task01_text = "Kezdjük több viszonylat hozzáadásával, hogy biztosítsuk, hogy megfelelõ kapacitásunk van, hogy megbírkózhassunk az érkezõ látogatók rohamával.";
$germany04_task01_short = "Létesíts öt új viszonylatot.";
$germany04_task01_passed = "Szép munka! Úgy gondolom az összes viszonylat nagyon jól lett megtervezve.";

$germany04_task02_name = "Fesztiválfélelmek";
$germany04_task02_text = "Egy fesztivál lesz a parkban és én és a barátaim szeretnénk elmenni, de az összes busz tele van és a taxik túl drágák. Biztos vagyok benne, hogy sok más utas is lenne a viszonylaton, nem csak mi, tehát fontolóra venné?";
$germany04_task02_short = "Létesíts egy buszjáratot a {0:parkhoz} és szállíts oda %0 utast.";
$germany04_task02_passed = "Köszönöm! Most már semmi problémánk nincs a parkba való eljutással kapcsolatban. A kedvenc bandám hamarosan játszik!";

$germany04_task03_name = "Az éttermek le vannak fedve";
$germany04_task03_text = "Mivel Oktoberfest éttermek tarkítják a várost, kitûnõ lefedettségre van szükségünk, hogy mindegyiket könnyû legyen elérni.";
$germany04_task03_short = "Érj el %0%%-os lefedettséget.";
$germany04_task03_passed = "Remek! Ez biztosan örömet fog okozni a turistáknak.";

$germany04_task04_name = "Egy új kedvenc";
$germany04_task04_text = "Megtaláltam az új kedvenc parkomat! Egy tökéletes hely egy szép kis piknikhez. Bárcsak könnyebb lenne elérni...";
$germany04_task04_short = "Létesíts két viszonylatot a {0:parkhoz} és szállíts oda %0 utast.";
$germany04_task04_passed = "Köszönöm! Így már minden nap megállhatok, hogy élvezhessem a csendet és nyugalmat.";

$germany04_task05_name = "Schnitzeltámogatás";
$germany04_task05_text = "Helló! Épp most nyitottam egy új schnitzel éttermet és abban reménykedtem, hogy ön segíthetne több vendéget bevonzani. Ha létesíteni tudna pár viszonylatot, hogy embereket vigyenek az étteremhez, annak nagyon hálás lennék. Önnek is lenne haszna belõle!";
$germany04_task05_short = "Létesíts egy viszonylatot a {0:schnitzel étteremhez} és szállíts oda %0 utast.";
$germany04_task05_passed = "Nagyon köszönöm! Az éttermemnek így már sokkal jobban megy  és egy kicsit még meg is változtattam a schnitzel receptemet – így még finomabb!";

$germany04_task06_name = "Túl öreg!";
$germany04_task06_text = "Meg vagyok döbbenve! A jármûvei túl öregek! Szennyezik a környezetet és és akkora lármát csapnak hogy nem tud elaludni tõle a szépségem. Tegyen valamit ezzel kapcsolatban!";
$germany04_task06_short = "Ne legyen egy évnél öregebb jármûved.";
$germany04_task06_passed = "Hát, nagyon is reméltem. Bár lehetnének egy kicsit tisztábbak!";

$germany04_task07_name = "A szállodáknak is kell egy kis figyelem";
$germany04_task07_text = "A szállodaigazgatók megkértek, hogy közvetítsek egy kérést: szeretnének egy viszonylatot, amely összeköti az összes szállodát, így vendégeket küldhetnek egymás szállodáiba, ha teltház van. Azt hiszem ez egy jó ötlet!";
$germany04_task07_short = "Létesíts egy viszonylatot az {0:A szállodához}, a {1:B szállodához} és a {2:C szállodához}.";
$germany04_task07_passed = "Ennek meg kellene tennie. Így mindenki könnyen találhat magának szállást. Köszönöm!";

$germany04_task08_name = "Reptéri viszonylatok";
$germany04_task08_text = "A reptér egyre forgalmasabb lesz, tehát azt javaslom létesítsünk pár viszonylatot amíg van esélyünk.";
$germany04_task08_short = "Létesíts három viszonylatot a {0:reptérhez}.";
$germany04_task08_passed = "Ez sokkal könnyebbé fogja tenni a reptérre való be és kijutást, szép munka!";

$germany04_task09_name = "Katonák toborzása";
$germany04_task09_text = "Épp most nyitottunk egy toborzóközpontot a városban, de úgy tûnik, hogy senki sem képes megtalálni a helyet. Nevetséges, én magam választottam a helyet és az kitûnõ. de hogy örömet okozzunk a siránkozóknak, úgy döntöttem, hogy megkérdezem, hogy tudna-e az iroda számára jobb kapcsolatokat biztosítani.";
$germany04_task09_short = "Létesíts egy viszonylatot az {0:irodaépülethez}.";
$germany04_task09_passed = "Az újoncos felsorakoztak, szép munka! Köszönöm, hogy biztosította az országunk biztonságát néhány évre.";

$germany04_task10_name = "Több kávét?";
$germany04_task10_text = "Helló megint! Attól félek megint jobb kapcsolatok kellenek a kávézómhoz. A hely egyszerûen gyönyörû – Szeretném, hogy mások is élvezhessék! És eközben esetleg vegyenek egy kis kávét.";
$germany04_task10_short = "Létesíts egy viszonylatot a {0:kávézóhoz}.";
$germany04_task10_passed = "Köszönöm! A kávézó így már több vendéget vonz... és õk is élvezik a kilátást!";

$germany04_task11_name = "Isar part";
$germany04_task11_text = "Az Isar folyó partjai érdekesek lehetnek a látogatók számára. Miért nem épít pár viszonylatot hogy eljuthassanak oda?";
$germany04_task11_short = "Létesíts két viszonylatot az {0:A parthoz} és a {1:B parthoz}.";
$germany04_task11_passed = "A viszonylatok kitûnõnek tûnnik, mindenki imádja a friss folyami levegõt és a jó kilátásokat!";

$germany04_task12_name = "Bulizás a parkban";
$germany04_task12_text = "Helló! Egy bulit fogok tartani a helyi parkban és már meghívtam az összes barátomat, de épp most vettem észre, hogy a parkot elég nehéz elérni. Kitudna segíteni kérem?";
$germany04_task12_short = "Létessíts két viszonylatot a {0:parkhoz}.";
$germany04_task12_passed = "Köszönöm! Mindenkinek sikerült eljönnie, köszönhetõen az új viszonylatoknak, annyira boldog vagyok!";

$germany04_task13_name = "Jobb mint az olaj";
$germany04_task13_text = "Van egy kérésem: Egy villamosokkal kapcsolatos projekten dolgozok, de a támogatóm kiszállt. Nagyon közel állok, hogy szabadalmaztassak egy új kenõanyagot, ami jobb mint az olaj, és a sínek tovább bírnák tõle, nulla kopással! Ha biztosítani tudna számomra finanszírozást, el tudnám látni a prototípussal.";
$germany04_task13_short = "Fizess %it d,20 pénzt, hogy -%1%%-os villamosenergia-költséged legyen három hónapig.";
$germany04_task13_passed = "Azonnal hozzáadom a kenõanyagot, nem fogja megbánni!";

$germany04_task14_name = "Kürtöljétek szét!";
$germany04_task14_text = "Olyan sok ember panaszkodik a kórházi parkolás miatt, hogy megfájdult a torkom a bocsánatkérésektõl. Mindenki kocsival utazik és örökké tart, mire parkolóhelyet találnak, ami hatalmas közlekedési dugókat okoz. Nem vagyok biztos benne, hogy az emberek gondolnak-e arra, hogy a tömegközlekedést is használhatják, tehát azt hiszem jó ötlet lenne reklámozni a szolgáltatásainkat. Csak gondoltam elmondom önnek!";
$germany04_task14_short = "Indíts egy hirdetõkampányt a {0:rádióban}.";
$germany04_task14_passed = "Köszönöm! Ez nagy segítség volt! Így az emberek már jobban tisztábban vannak a tömegközlekedési lehetõségekkel.";

$germany04_task15_name = "Oktoberfest!";
$germany04_task15_text = "Itt is vagyunk! Az Oktoberfest hamarosan megkezdõdik és több ezer ember felbukkanására lehet számítani. Reménykedjünk, hogy képesek leszünk kezelni a tömeget.";
$germany04_task15_short = "Szállíts %0 utast.";

$germany04_task16_name = "Egyetemi terület";
$germany04_task16_text = "A mûszaki egyetem részei szér vannak szóródva a városban, és nehéz idõben eljutni egyik helyrõl a másikra az óráimra. A diákok is értékelnének egy közvetlen járatot, tehát utánanézhetne hogy megvalósítható-e.";
$germany04_task16_short = "Létesíts egy viszonylatot, ami összeköti az {0:A terület}, a {1:B terület}, a {2:C terület} és a {3:D területet}.";
$germany04_task16_passed = "Szép munka! Kevesebb diák késik az óráimról, így valószínûleg az ön viszonylatát használják. Köszönöm!";

$germany04_task17_name = "Jobb kávészünetek";
$germany04_task17_text = "Helló! A helyi múzeumban dolgozok. Jelenleg épp felújítunk hogy legyen helyünk egy új kiállításank és az alkalmazottak és az alkalmazottak munkaszüneti szobája ideiglenesen el lett költöztetve a színház központjába. Nincs messze, de azért elég nagy séta úgy, hogy egy napp többször is meg kell tenni. Sok más múzeumalkalmazott is értékelne egy új viszonylatot. Tudna nekünk segíteni?";
$germany04_task17_short = "Létesíts egy viszonylatot a {0:múzeumtól} az {1:irodaépületig}.";
$germany04_task17_passed = "Nagyon köszönöm! Ez sokkal könnyebbé teszi az életünket – nincs több hosszú séta a munkaszüneti szobához.";
